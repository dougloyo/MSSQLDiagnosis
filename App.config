<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  <appSettings>
    <!--Create a query that returns a scalar value-->
    <add key="SQLStatement" value="SELECT COUNT(*) FROM TableName"/>
  </appSettings>
  <connectionStrings>
    <!-- Add connection string to test.-->
    <add name="Connection" connectionString="Database=[TheDatabase]; Data Source=[TheServer]; Persist Security Info=True; User Id=[TheUSer]; Password=[ThePassword];" providerName="System.Data.SqlClient" />
  </connectionStrings>
</configuration>